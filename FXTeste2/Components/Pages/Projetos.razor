@page "/Projetos"

<section>
    <div class="container pt-5">
        <div class="row justify-content-center">
            <div class="col-10">
                <div class="col-11 px-4 mb-0">
                    <h1 style="text-align:center">Projetos</h1>
                </div>
                <hr class=" mt-1 mb-4 bg-primary" />
            </div>
        </div>
    </div>
    <form>

        <!-- 1 coluna pode ser editada -->
        <div class="row mb-3">
            <div class="col">
                <div class="form-floating mb-3 ">
                    <input type="text" class="form-control" id="floatingInput" placeholder="solicitante">
                    <label for="floatingInput">Solicitante:</label>
                </div>
            </div>
            <div class="col">
                <div class="form-floating mb-3 ">
                    <input type="text" class="form-control" id="floatingInput" placeholder="departamento">
                    <label for="floatingInput">Departamento:</label>
                </div>
            </div>
        </div>

        <!-- 2 coluna pode ser editada -->
        <div class="row mb-4">
            <div class="col">
                <div class="form-floating mb-3">
                    <select class="form-select text-xxl-start" id="floatingSelectGrid">
                        <option value=""></option>
                        <option value="Urgente">Urgente</option>
                        <option value="Alta">Alta</option>
                        <option value="Media">Media</option>
                        <option value="Baixa">Baixa</option>
                    </select>
                    <label for="floatingInput">Status:</label>
                </div>
            </div>
            <div class="col">
                <div class="form-floating mb-3 ">
                    <input type="date" class="form-control" id="floatingInput" placeholder="custo_total">
                    <label for="floatingInput">Prazo:</label>
                </div>
            </div>
        </div>

        <!-- 3 coluna pode ser editada -->
        <div class="row mb-4">
            <div class="col">
                <div class="form-floating mb-3">
                    <input type="date" class="form-control" id="floatingInput" placeholder="data_inicio">
                    <label for="floatingInput">Data de Inicio:</label>
                </div>
            </div>
            <div class="col">
                <div class="form-floating mb-3">
                    <input type="date" class="form-control" id="floatingInput" placeholder="data_finalizada">
                    <label for="floatingInput">Data Finalizada:</label>
                </div>
            </div>
        </div>

        <!-- 4 coluna pode ser editada -->
        <div class="row mb-3">
            <div class="col">
                <div class="form-floating mb-3 ">
                    <input type="text" class="form-control" id="floatingInput" placeholder="solicitacao">
                    <label for="floatingInput">Solicitação:</label>
                </div>
            </div>
            <div class="col">
                <div class="form-floating mb-3 ">
                    <input type="text" class="form-control" id="floatingInput" placeholder="responsavel">
                    <label for="floatingInput">Tópico:</label>
                </div>
            </div>
        </div>
        <!-- 5 coluna pode ser editada -->
        <div class="row mb-3">
            <div class="col">
                <div class="form-floating mb-3 ">
                    <input type="text" class="form-control" id="floatingInput" placeholder="descricao_servico"
                           style="height:100px;">
                    <label for="floatingInput">Descrição do Serviço:</label>
                </div>
            </div>
        </div>
        <!-- button -->
        <div class="d-grid gap-2 col-6 mx-auto">
            <button class="btn fw-bolder text-white" type="button" style="background-color:#b41720;">Cadastrar</button>
        </div>

    </form>

</section>


