@page "/Devolucoes"

<section>
    <div class="container pt-5">
        <div class="row justify-content-center">
            <div class="col-10">
                <div class="col-11 px-4 mb-0">
                    <h1 style="text-align:center">Devoluções</h1>
                </div>
                <hr class=" mt-1 mb-4 bg-primary" />
            </div>
        </div>
    </div>

    <form>
        <!-- 1 coluna pode ser editada -->
        <div class="row mb-3">
            <div class="col">
                <div class="form-floating mb-3 ">
                    <input type="text" class="form-control" id="floatingInput" placeholder="nota_fiscal">
                    <label for="floatingInput">Nota Fiscal:</label>
                </div>
            </div>
        </div>
        <!-- 2 coluna pode ser editada -->
        <div class="row mb-4">
            <div class="col">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="floatingInput" placeholder="cliente">
                    <label for="floatingInput">Cliente:</label>
                </div>
            </div>
            <div class="col">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="floatingInput" placeholder="vendedor">
                    <label for="floatingInput">Vendedor:</label>
                </div>
            </div>
        </div>
        <div class="row mb-4">
            <div class="col">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="floatingInput" placeholder="autoriza">
                    <label for="floatingInput">Autorização:</label>
                </div>
            </div>
            <div class="col">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="floatingInput" placeholder="recebimento">
                    <label for="floatingInput">Recebimento:</label>
                </div>
            </div>
        </div>
        <!-- 3 coluna pode ser editada -->
        <div class="row mb-4">
            <div class="col">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="floatingInput" placeholder="ValorDeCompra">
                    <label for="floatingInput">Valor Total:</label>
                </div>
            </div>
            <div class="col">
                <div class="form-floating mb-3">
                    <input type="date" class="form-control" id="floatingInput" placeholder="ValorDeUso">
                    <label for="floatingInput">Data:</label>
                </div>
            </div>
        </div>
        <!-- 4 coluna pode ser editada -->
        <div class="row mb-3">
            <div class="col">
                <div class="form-floating mb-3 ">
                    <input type="text" class="form-control" id="floatingInput" placeholder="justificativa"
                           style="height:100px;">
                    <label for="floatingInput">Justificativa:</label>
                </div>
            </div>
        </div>
        <!-- button -->
        <div class="d-grid gap-2 col-6 mx-auto">
            <button class="btn fw-bolder text-white" type="button" style="background-color:#b41720;">Enviar</button>
        </div>
    </form>
</section>
